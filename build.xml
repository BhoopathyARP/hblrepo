<?xml version="1.0" encoding="UTF-8"?>
<project name="IPM_Hackers" basedir="IPM_Hackers" default="main">
	<mkdir dir="IPM_Hackers/classes"/>
	<mkdir dir="IPM_Hackers/dist"/>
	<target name="compile">
		<javac debug="true" srcdir="IPM_Hackers/src" destdir="IPM_Hackers/classes" includeantruntime="true"/>
	</target>
	
	<target name="war" depends="compile">
			<war destfile="IPMHackers.war" webxml="IPM_Hackers/WebContent/WEB-INF/web.xml" basedir="IPM_Hackers/dist" >
			</war>
		</target>
	
	
	<target name="main" depends="war">
	<echo message="====IPM HACKERS=====" />
	</target>
	
</project>